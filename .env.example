# =============================================================================
# .NET Test Generator Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Azure DevOps Configuration (Required)
# -----------------------------------------------------------------------------

# Your Azure DevOps organization URL
# Example: https://dev.azure.com/myorganization
AZURE_DEVOPS_ORGANIZATION_URL=https://dev.azure.com/your-organization

# Personal Access Token with Code (Read & Write) and PR Threads permissions
AZURE_DEVOPS_PERSONAL_ACCESS_TOKEN=your-pat-token-here

# Azure DevOps project name
AZURE_DEVOPS_PROJECT=your-project-name

# -----------------------------------------------------------------------------
# Ollama Configuration (Optional - defaults shown)
# -----------------------------------------------------------------------------

# Ollama server URL (default: localhost)
OLLAMA_BASE_URL=http://localhost:11434

# Model to use for test generation
# Recommended: qwen2.5-coder:32b for best quality
# Alternatives: qwen2.5-coder:14b, qwen2.5-coder:7b (faster, less accurate)
OLLAMA_MODEL=qwen2.5-coder:32b

# Context window size (tokens)
# Qwen Coder 3 supports up to 128k, but 32k is a good balance
OLLAMA_NUM_CTX=32768

# Generation temperature (lower = more deterministic)
# 0.1 is recommended for code generation
OLLAMA_TEMPERATURE=0.1

# Request timeout in seconds
OLLAMA_TIMEOUT=600

# -----------------------------------------------------------------------------
# Workflow Configuration (Optional - defaults shown)
# -----------------------------------------------------------------------------

# Directory where repositories will be cloned
WORKFLOW_WORK_DIRECTORY=./workdir

# Maximum iterations for build error fixing
WORKFLOW_MAX_BUILD_FIX_ITERATIONS=10

# Maximum iterations for test failure fixing
WORKFLOW_MAX_TEST_FIX_ITERATIONS=5

# Always delete and re-clone repository (recommended: true)
WORKFLOW_FORCE_FRESH_CLONE=true

# -----------------------------------------------------------------------------
# Logging Configuration (Optional - defaults shown)
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Use rich console for colored output
LOG_RICH_CONSOLE=true

# Optional: Log to file
# LOG_FILE=./testgen.log
